<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.kristine.eventastic.Activities.AllEvents">

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:layout_height="wrap_content"
        android:text="To all possible cities"
        android:id="@+id/to_all_possible_cities"
        android:textColor="@color/white"
        android:enabled="false"
        android:textSize="@dimen/sixteen_sp"
        android:textStyle="bold"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/all_events_listview"
        android:layout_below="@+id/to_all_possible_cities"
        android:layout_marginTop="@dimen/ten_dp"></ListView>

</RelativeLayout>