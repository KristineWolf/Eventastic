<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.kristine.eventastic.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:id="@+id/logo"
        android:src="@drawable/logo2"
        android:contentDescription="@string/content_description_logo"
        android:background="@color/colorPrimaryDark"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.9"
        android:padding="@dimen/margin_xlarge">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/events_city"
            android:drawableBottom="@drawable/to_all_events"
            android:id="@+id/toAllEventsInACity"
            android:textStyle="bold"
            android:textSize="@dimen/button_text_size"
            android:background="@color/red"
            android:textColor="@color/white"
            android:includeFontPadding="true"
            android:padding="@dimen/padding_top_button_main_land"
            android:paddingLeft="@dimen/padding_button_main_land"
            android:paddingRight="@dimen/padding_button_main_land"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/participating_events"
            android:id="@+id/EventsYouWantToParticipate"
            android:drawableBottom="@drawable/to_particpating_events"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold"
            android:background="@color/red"
            android:textColor="@color/white"
            android:includeFontPadding="true"
            android:padding="@dimen/padding_top_button_main_land"
            android:paddingLeft="@dimen/padding_button_main_land"
            android:paddingRight="@dimen/padding_button_main_land"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>
