<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kristine.eventastic">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo.png"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.EventsInCity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Activities.ParticipatingEvents"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Activities.Explanation"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Activities.AddEvent"
            android:parentActivityName=".Activities.EventsInCity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.EventsInCity" />
        </activity>
        <activity
            android:name=".Activities.EventAlone"
            android:parentActivityName=".Activities.EventsInCity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.EventsInCity" />
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".Activities.AllInformationsOfAParticipatingEvent"
            android:parentActivityName=".Activities.ParticipatingEvents">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".Activities.ParticipatingEvents" />
        </activity>
        <activity android:name=".Activities.AllInformationsOfAnEvent"
            android:parentActivityName=".Activities.EventsInCity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.EventsInCity" />></activity>
    </application>

</manifest>